grammar<'input>;

pub Script : Script1 = {
    <exprs:Exprs> "<end-of-stream>"? => Script1{exprs},
    <expr:Expr> "<end-of-stream>" => Script1{exprs: vec![expr]},
}

Exprs: Exprs1 = {
    <expr:Expr> ";" <list:Exprs> => {
       let mut list = list;
        list.insert(0,expr);
        list
    },
    <item:Expr> ";" => vec![item],
}

Expr: Expr1 = {
    <o:BinOp<BinOr, Expr, AndExpr>> => <>,
    AndExpr => <>,
}

BinOr: BinOpKind = {
    "or" => BinOpKind::Or,
}

BinAnd: BinOpKind = {
    "and" => BinOpKind::And,
}

AndExpr: Expr1 = {
    BinOp<BinAnd, AndExpr, EqExpr> => <>,
    EqExpr => <>,
}

BinEq: BinOpKind = {
    "==" => BinOpKind::Eq,
    "!=" => BinOpKind::NotEq,
}

EqExpr: Expr1 = {
    BinOp<BinEq, EqExpr, CmpExpr> => <>,
    CmpExpr => <>,
}

BinCmp: BinOpKind = {
    ">=" => BinOpKind::Gte,
    ">" => BinOpKind::Gt,
    "<=" => BinOpKind::Lte,
    "<" => BinOpKind::Lt,
}

CmpExpr: Expr1 = {
    BinOp<BinCmp, CmpExpr, AddExpr> => <>,
    AddExpr => <>,
}

BinAdd: BinOpKind = {
    "+" => BinOpKind::Add,
    "-" => BinOpKind::Sub,
}

AddExpr: Expr1 = {
    BinOp<BinAdd, AddExpr, MulExpr> => <>,
    MulExpr => <>,
}

BinMul: BinOpKind = {
    "*" => BinOpKind::Mul,
    "/" => BinOpKind::Div,
    "%" => BinOpKind::Mod,
}

MulExpr: Expr1 = {
    BinOp<BinMul, MulExpr, UnaryExpr> => <>,
    UnaryExpr => <>,
}

UnaryExpr: Expr1 = {
    <s:@L> "+" <expr:UnarySimpleExpr> <e:@L> => Expr1::Unary(UnaryExpr1 { kind: UnaryOpKind::Plus, expr: Box::new(expr), start: s, end: e }),
    <s:@L> "-" <expr:UnarySimpleExpr> <e:@L> => Expr1::Unary(UnaryExpr1 { kind: UnaryOpKind::Minus, expr: Box::new(expr), start: s, end: e }),
    UnarySimpleExpr => <>,
}

UnarySimpleExpr: Expr1 = {
    <s:@L> "not" <expr:SimpleExpr> <e:@L> => Expr1::Unary(UnaryExpr1 { kind: UnaryOpKind::Not, expr: Box::new(expr), start: s, end: e }),
    SimpleExpr => <>,
}

SimpleExpr: Expr1 = {
    <literal:Literal> => Expr1::Literal(literal),
    "(" <expr:Expr> ")" => expr,
    <path:Path> => Expr1::Path(path),
    <record:Record> => Expr1::RecordExpr(record),
    <pp:Match> => Expr1::MatchExpr(Box::new(pp)),
    <pp:Patch> => Expr1::PatchExpr(Box::new(pp)),
    <pp:Merge> => Expr1::MergeExpr(Box::new(pp)),
    <call:Invoke> => Expr1::Invoke(call),
    <comprehension:Foreach> => Expr1::Comprehension(comprehension),
    Let => <>,
    Drop => <>,
    Emit => <>,
}

Literal: Literal1 = {
    <s:@L> <v:Nil> <e:@L> => Literal1{value: v, start: s, end: e},
    <s:@L> <v:Bool> <e:@L> => Literal1{value: v, start: s, end: e},
    <s:@L> <v:Int> <e:@L> => Literal1{value: v, start: s, end: e},
    <s:@L> <v:Float> <e:@L> => Literal1{value: v, start: s, end: e},
    <s:@L> <v:String> <e:@L> => Literal1{value: v, start: s, end: e},
    <s:@L> <v:List> <e:@L> => Literal1{value: v, start: s, end: e},
}

AssignOp: Token<'input> = {
    "=" => Token::Eq,
}

Let: Expr1 = {
// TODO FIXME investigate multi-let after `event` keyword +change
//    <s:@L> "let" <exprs:Assignments> <e:@L> "end" => Expr::Let(Let { exprs, start: s, end: e }),
    <s:@L> "let" <expr:Assignment> <e:@L> => expr, // Expr::Let(Let { exprs: vec![expr], start: s, end: e }),
}

