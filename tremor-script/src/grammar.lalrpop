Assignment: Expr1 = {
    <s:@L> <path:Path> @L AssignOp @R <expr:SimpleExpr> <e:@L> => Expr1::Assign(Assign1 { path, expr: Box::new(expr), start: s, end: e }),
}

Drop: Expr1 = {
    <s:@L> "drop" <expr:SimpleExpr> <e:@L> => Expr1::Drop(DropExpr1{ expr: Box::new(expr), start: s, end: e }),
    <s:@L> "drop" <e:@L> => Expr1::Drop(DropExpr1 { expr: Box::new(Expr1::Path(Path1::Event(EventPath1 { segments: vec![], start: s, end: e }))), start: s, end: e }) ,
}

Emit: Expr1 = {
    <s:@L> "emit" <expr:SimpleExpr> <e:@L> => Expr1::Emit(EmitExpr1 { expr: Box::new(expr), start: s, end: e }),
    <s:@L> "emit" <e:@L> => Expr1::Emit(EmitExpr1 { expr: Box::new(Expr1::Path(Path1::Event(EventPath1 { segments: vec![], start: s, end: e }))), start: s, end: e }) ,
}

Nil: LiteralValue1 = {
    <literal:"nil">  => LiteralValue1::Native(OwnedValue::Null),
}

Bool: LiteralValue1 = {
    <literal:"bool"> => LiteralValue1::Native( OwnedValue::from(literal) ),
}

Int: LiteralValue1 = {
     <literal:"int">  => LiteralValue1::Native( OwnedValue::from(literal as i64) ),
}

Float: LiteralValue1 = {
    <literal:"float"> => LiteralValue1::Native( OwnedValue::from(literal) ),
}

String: LiteralValue1 = {
    <literal:StringLiteral>  => LiteralValue1::Native( OwnedValue::from(literal) ),
}

Path: Path1 = {
    <s:@L> "$" <segments:QualifiedSegments> <e:@L> => Path1::Meta(MetadataPath1 { segments, start: s, end: e }),
    <s:@L> "event" "." <segments:QualifiedSegments> <e:@L> => Path1::Event(EventPath1 { segments, start: s, end: e }),
    <s:@L> "event" <e:@R> => Path1::Event(EventPath1 { segments: vec![], start: s, end: e }),
    <s:@L> "$" <e:@L> => Path1::Meta(MetadataPath1 { segments: vec![], start: s, end: e }),
    <s:@L> <segment:PathSegment> <segments:LocalSegments> <e:@L> => {
        let mut list = segments;
        list.insert(0, segment);
        Path1::Local(LocalPath1 { segments: list, start: s, end: e })
    },
    <s:@L> <segment:PathSegment> <e:@L> => {
        Path1::Local(LocalPath1 { segments:  vec![segment], start: s, end: e })
    },
}

LocalSegments: Segments1 = {
    "." <segment:PathSegment> <segments:LocalSegments> => {
        let mut segments = segments;
        segments.insert(0, segment);
        segments
    },
    "[" <selector:Selector> "]" <segments:LocalSegments> => {
        let mut segments = segments;
        segments.insert(0, selector);
        segments
    },
    "[" <selector:Selector> "]" => vec![selector],
    "." <segment:PathSegment> => vec![segment],
}

Selector: Segment1 = {
    <start_lower:@L> <range_start:Expr> <end_lower:@L> ":" <start_upper:@L> <range_end:Expr> <end_upper:@L> => Segment1::RangeSelector{range_start, range_end, start_lower, end_lower, start_upper, end_upper},
    <start:@L> <expr:Expr> <end:@L>  => Segment1::ElementSelector{expr, start, end},
}

QualifiedSegments: Segments1 = {
    <segments:QualifiedSegments> "." <segment:PathSegment> => {
        let mut list = segments;
        list.push(segment);
        list
    },
    <segments:QualifiedSegments> "[" <segment:Selector> "]" => {
        let mut list = segments;
        list.push(segment);
        list
    },
    "["<s:@L> <segment:Selector> <e:@L>"]" => vec![segment],
    <segment:PathSegment> => vec![segment],
}

#[inline]
PathSegment: Segment1 = {
    <s:@L> <id:Ident> <e:@L> => Segment1::from_id(id, s, e),
}
